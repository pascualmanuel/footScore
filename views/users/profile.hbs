<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-6">
      <h2>Welcome {{name}}! </h2>
      <br>
      <div class="form-row">
        <div class="form-group col-md-6">
          <h3>
            Name: {{name}} </h3>
        </div>

        <div class="form-group">
          <h3>Your image: </h3>
          <img src="{{img}}" width="100" alt="Account image">
        </div>
        <div class="form-group col-md-12">
          <h3>
            Country: {{country}}
          </h3>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <h3>League: {{league}}</h3>
        </div>
        <div class="form-group col-md-6">
          <h3>Your team: {{team}}</h3>
          <img src="{{team.logo}}" width="100px" alt="Team icon">

        </div>
        <div>
          <!-- <button type="submit" class="btn btn-dark btn-block"> Editar perfil </button> -->
          <a href='edit-profile' class="btn btn-dark btn-block">Edit Profile</a>
        </div>
        <div>
          <!-- <button type="submit" class="btn btn-dark btn-block"> Editar perfil </button> -->
          <a href='/article/write-new' class="btn btn-dark btn-block">Write news</a>
        </div>
      </div>
    </div>
  </div>
</div>