<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-6">
            <h1>Edit User Account</h1>
            <br>
            <form action="/users/edit-profile" method="POST" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">New user name</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">New user Email</label>
                        <input type="text" class="form-control" id="email" name="email" value="{{email}}">
                    </div>
                </div>

                <label>
                    <h2>Upload your profile photo</h2>
                    <input type="file" name="img">
                </label>

                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label" for="journalist">
                            <input class="form-check-input" type="checkbox" value="true" name="journalist">
                            <p>Are you a journalist? Do you want to be part of the FootScore family by writing the news
                                of your favorite team? Activate the checkbox</p>
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-dark btn-block"> Update Account </button>
            </form>

        </div>
    </div>
</div>