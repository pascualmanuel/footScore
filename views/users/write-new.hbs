<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-4">

            <h2>Welcome journalist {{name}}</h2>
            <br>


            <form action="/publicar-noticia" method="POST">
                <div class="form-group">
                    <label for="text">Headline</label>
                    <input type="text" class="form-control" id="headline" name="headline"
                        placeholder="Write your headline here">
                </div>
                <div class="form-group">
                    <label for="textArea">Breaking New</label>
                    <textarea name="textarea" rows="10" cols="44"
                        placeholder="Tell to FootScore Community something awesome about yout favourite team!"></textarea>
                </div>


                <div>
                    <p>
                        This is a news about {{team}}, written by {{author}} as of {{date}}
                    </p>
                </div>
                <div>
                    <img src="/images/prueba.png" alt="imagen de prueba">
                </div>
                <hr>
                <button type="submit" class="btn btn-dark btn-block">Send New</button>
            </form>

            {{#if errorMsg}}
            <p id="errorMessage">{{errorMsg}}</p>
            {{/if}}
        </div>
    </div>


</div>