<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>User Sign up</h1>
      <br>
      <form action="/registro/equipo" method="POST">
        <div class="form-row">



          <div class="form-row">

            <div class="form-group col-md-6">
              <label for="league">Your favorite team</label>
              <select name="team" class="form-control" id="team">

                <option>Choose one</option>
                {{#each teams}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
              </select>
            </div>

          <button type="submit" class="btn btn-dark btn-block"> Siguiente </button>

      </form>

      {{#if errorMsg}}
      <p id="errorMessage">{{errorMsg}}</p>
      {{/if}}
      <br>

      <p>Are you part of the FootScore community? <a href="/iniciar-sesion">Log in here</a>.</p>

    </div>
  </div>
</div>


